{
  "manifest_version": 3,
  "name": "Clarity - Chrome AI Study Companion",
  "version": "3.0.0",
  "description": "Chrome AI-powered study companion using built-in Gemini Nano for intelligent content summarization and study guides.",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clarity - Chrome AI Study Companion"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
